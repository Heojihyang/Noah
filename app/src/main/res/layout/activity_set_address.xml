<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SetAddress">

    <!-- 상단바 구현 : yellow -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/yellow"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="주소지 변경"
            />

    </LinearLayout>

    <!-- 지도 창 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray3"
        android:layout_weight="1.3"
        />

    <!-- 지도 아래 공간 : white -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="30dp"
        android:orientation="vertical">

        <!-- 주소지 검색창 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:background="@drawable/rounded_box_gray1">

            <!-- 주소지 검색입력창 -->
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray2"
                android:textSize="15sp"
                android:gravity="center_vertical|start"
                android:hint="건물명, 도로명 또는 지번으로 검색"
                android:layout_weight="1"/>

            <!-- 검색 버튼 -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:src="@drawable/search"/>


        </LinearLayout>

        <!-- 주소지 검색 예시 txt -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="12sp"
            android:textColor="@color/gray3"
            android:textStyle="bold"
            android:text="이렇게 검색해 보세요" />

        <!-- 도로명주소 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/gray2"
            android:text="도로명 건물번호"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:text="예시) 서울특별시 노원구 화랑로 621"
            />

        <!-- 지번 주소 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/gray2"
            android:text="지역명(동/리) + 번지 "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:text="예시) 서울특별시 노원구 공릉동 113"
            />

        <!-- 건물주소 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/gray2"
            android:text="지역명(동/리) + 건물명(아파트 명) "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:text="예시) 공릉동 서울여자대학교 "
            />

    </LinearLayout>

    <!-- 확인 버튼 : yellow -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/button_yellow"/>

</LinearLayout>