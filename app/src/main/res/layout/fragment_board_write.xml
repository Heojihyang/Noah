<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    tools:context=".ui.home.BoardWrite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_box_white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="글쓰기"
                android:layout_weight="1"
                />

            <!--등록 버튼-->
            <Button
                android:id="@+id/regist_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_yellow"
                android:text="등록"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_box_gray2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <EditText
                android:id="@+id/title_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:hint="제목: 제목을 입력하세요"
                android:textColorHint="@color/gray1"
                android:backgroundTint="@color/gray1"/>

            <EditText
                android:id="@+id/contents_edit"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="top"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="내용을 입력하세요"
                android:textColorHint="@color/gray1" />


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/ic_image"
            android:backgroundTint="@color/white"
            app:borderWidth="1dp"
            app:backgroundTint="@color/gray2"/>


    </LinearLayout>




</LinearLayout>